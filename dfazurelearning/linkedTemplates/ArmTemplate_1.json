{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "dfazurelearning"
		},
		"Trigger_properties_dpIntro_parameters_fileName": {
			"type": "string",
			"defaultValue": "cars.csv"
		},
		"Trigger_properties_dpIntro_parameters_tableName": {
			"type": "string",
			"defaultValue": "Cars"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Trigger')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Stopped",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "dpIntro",
							"type": "PipelineReference"
						},
						"parameters": {
							"fileName": "[parameters('Trigger_properties_dpIntro_parameters_fileName')]",
							"tableName": "[parameters('Trigger_properties_dpIntro_parameters_tableName')]"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2021-08-09T22:56:00",
						"endTime": "2021-08-10T22:56:00",
						"timeZone": "Eastern Standard Time",
						"schedule": {
							"minutes": [
								0
							],
							"hours": [
								7
							]
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}